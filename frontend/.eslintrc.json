{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "prettier",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-native",
    "jest",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "react/style-prop-object": [1, {
      "allow": ["StatusBar"]
    }],
    "react/no-unstable-nested-components": [1, {
      "allowAsProps": true
    }],
    "react/prop-types": ["off"]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["~features", "./src/features"],
          ["~services", "./src/services"],
          ["~shared", "./src/shared"]
        ],
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "globals": {
    "__DEV__": true
  }
}
